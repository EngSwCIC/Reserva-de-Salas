<%= content_for :css do %>
  <%= stylesheet_link_tag 'header' %>
<% end %>

<h2>Edit Room</h2>

<%= form_for(@room) do |r| %>
  
  <div class="field">
    <%= r.label :name %><br>
    <%= r.text_area :name, autofocus: true, autocomplete: "Name" %>
  </div>

  <div class="field">
    <%= r.label :location %><br>
    <%= r.text_area :location, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= r.label :tipo_sala %><br>
    <%= r.select :tipo_sala, options_for_select([['Auditórios', "Auditórios"], ['Laboratórios', "Laboratórios"], ['Multiuso', "Multiuso"], ['Salas de Aula', "Salas de Aula"], ['Salas de Reunião', "Salas de Reunião"]]), {:include_blank => "Selecione o tipo de sala"}, { :class => 'custom-select' } %>
  </div>
  
  <div class="actions">
    <%= r.submit "Update" %>
  </div>

<% end %>
