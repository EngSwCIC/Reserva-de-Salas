<%= content_for :css do %>
  <%= stylesheet_link_tag 'header' %>
<% end %>

<h1>Busca de Salas Disponíveis</h1>

<%= form_tag search_result_path do %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label>Data a buscar</label>
      <%= date_field_tag :date_search, class: 'form-control'  %>
    </div>
    <div class="form-group col-md-6">
      <label>Horário</label>
      <%= select_tag :time_search, options_for_select([['6:00 - 8:00', "6:00"], ['8:00 - 10:00', "8:00"], ['10:00 - 12:00', "10:00"],['12:00 - 14:00', "12:00"], ['14:00 - 16:00', "14:00"], ['16:00 - 18:00', "16:00"], ['18:00 - 20:00', "18:00"], ['20:00 - 22:00', "20:00"],['22:00 - 24:00', "22:00"]]) %>
    </div>
    <div class="form-group col-md-6">
      <%= submit_tag "Buscar"%>
    </div>
  </div>
<% end %>
