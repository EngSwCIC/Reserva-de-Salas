<% if user_signed_in? %>
	<div class="content-wrapper">
		<div class="container-fluid">
			<h1 class='text-center'>Home</h1>

      <div class="col-xs-10 col-xs-offset-5">
				<div>Bem-vindo <%= current_user.email %></div>
			</div>

      <table id="aprovadas">
        <caption> Reservas Aprovadas</caption>
        <tr> 
          <th> Nome da Sala </th> 
          <th> Data </th> 
        </tr>
         <% @approved.each do |appointment| %>
          <tr>
            <% if appointment.appointment_date == Date.today  %>
              <td class="font-weight-bold" id="destaque"><%= appointment.room.name %></td>
              <td class="font-weight-bold" id="destaque"><%= appointment.appointment_date %></td>
            <% else %>              
              <td><%= appointment.room.name %></td>
              <td><%= appointment.appointment_date %></td>
            <% end %>
          </tr>
        <% end %>
      </table>

      <table id="pendentes">
        <caption> Reservas Pendentes</caption>
        <tr> 
          <th> Nome da Sala </th> 
          <th> Data </th> 
        </tr> 
		<% @pendent.each do |appointment| %>
			<tr>
			  <% if appointment.appointment_date == Date.today  %>
				<td class="font-weight-bold" id="destaque"><%= appointment.room.name %></td>
				<td class="font-weight-bold" id="destaque"><%= appointment.appointment_date %></td>
			  <% else %>              
				<td><%= appointment.room.name %></td>
				<td><%= appointment.appointment_date %></td>
			  <% end %>
			</tr>
		  <% end %>
      </table>

	<table id="expiradas">
        <caption> Reservas Expiradas</caption>
        <tr> 
          <th> Nome da Sala </th> 
          <th> Data </th> 
        </tr>
         <% @expired.each do |appointment| %>
          <tr>           
            <td><%= appointment.room.name %></td>
            <td><%= appointment.appointment_date %></td>
          </tr>
        <% end %>
      </table>

		</div>
	</div>
<% end %>
