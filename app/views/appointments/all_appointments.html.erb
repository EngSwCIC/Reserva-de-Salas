
<table class="table" id="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Usuário</th>
    <th scope="col">Sala</th>
    <th scope="col">Data do aluguel</th>
    <th scope="col">Início</th>
    <th scope="col">Status</th>

    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @appointments.each do |appointment| %>
    <tr>
      <th scope="row"> <%= appointment.id %></th>
      <td class="appointment-data"> <%= appointment.user.username %> </td>
      <%# <td class="appointment-data"> <%= appointment.room.name %>
      <td class="appointment-data"> <%= appointment.appointment_date.strftime("%d/%m/%Y - %I:%M%p") %> </td>
      <td class="appointment-data"> <%= appointment.start_time.strftime("%d/%m/%Y - %I:%M%p") %> </td>
      <td>
        <%= form_for(appointment) do |r| %>    
          <%= link_to "Aprovar", change_status_path(id: appointment.id, status: 2), remote: true, class:'btn btn-secondary' %>
          <%= link_to "Reprovar", change_status_path(id: appointment.id, status: 0), remote: true, class:'btn btn-secondary' %>
          <% @status_name = Appointment.status_names[appointment.status] %>
          <%= r.label @status_name, id: "status#{appointment.id}" %>
        <% end %> 
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

