<div>
<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
      <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
                  <span class="login100-form-title p-b-55">
                      <h2 style="font-weight: bold;">
            Recuperação de senha
          </h2>
                  </span>
        
        <div class="wrap-input100 validate-input m-b-16" >
        <%= hidden_field_tag :email, @user.email %>
            <span class="focus-input100"></span>
        </div>
        
        <div class="wrap-input100 validate-input m-b-16" data-validate = "Password is required">
          <%= f.password_field :password, class: 'input100', placeholder: 'Nova Senha' %>
          <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input m-b-16" data-validate = "Password Confirmation is required">
          <%= f.password_field :password_confirmation, class: 'input100', placeholder: 'Confirmação' %>
          <span class="focus-input100"></span>
        </div>        

        <div class="container-login100-form-btn p-t-25">
          <%= f.submit "Alterar Senha", class: 'login100-form-btn' %>
        </div>

        <div class="text-center w-full p-t-115">
                      
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>