<!DOCTYPE html>
<html>
  <head>
    <title>Home</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
        <%= render 'layouts/header-user' %>
        <%= yield %>
    <% end %>
    <% if !user_signed_in? %>
        <%= yield %>
    <% end %>
  </body>
</html>
